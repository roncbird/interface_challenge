<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:background="@android:color/white"
     tools:context="com.emc.interfacechallenge.fragments.PhotosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal"
        android:weightSum="7">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="4.7">

            <ImageView
                android:id="@+id/iv_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_15_opacity"/>

            <TextView
                android:id="@+id/tv_delete_image_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="-6.5dp"
                android:layout_marginEnd="-5dp"
                android:background="@drawable/delete_circle_background"
                android:text="@string/fa_delete_image"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2.3"
            android:orientation="vertical"
            android:paddingLeft="2dp"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_15_opacity"/>

                <TextView
                    android:id="@+id/tv_delete_image_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="-6.5dp"
                    android:layout_marginEnd="-5dp"
                    android:background="@drawable/delete_circle_background"
                    android:text="@string/fa_delete_image"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    android:visibility="gone"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_15_opacity"/>

                <TextView
                    android:id="@+id/tv_delete_image_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="-6.5dp"
                    android:layout_marginEnd="-5dp"
                    android:background="@drawable/delete_circle_background"
                    android:text="@string/fa_delete_image"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    android:visibility="gone"/>


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="7dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_15_opacity"/>

            <TextView
                android:id="@+id/tv_delete_image_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-5dp"
                android:layout_marginBottom="-6.5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/delete_circle_background"
                android:text="@string/fa_delete_image"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:visibility="gone"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="9dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_15_opacity"/>

            <TextView
                android:id="@+id/tv_delete_image_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-5dp"
                android:layout_marginBottom="-6.5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/delete_circle_background"
                android:text="@string/fa_delete_image"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:visibility="gone"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_six"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_15_opacity"/>

            <TextView
                android:id="@+id/tv_delete_image_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-5dp"
                android:layout_marginBottom="-6.5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/delete_circle_background"
                android:text="@string/fa_delete_image"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:visibility="gone"/>


        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/tv_photos_profile_info"
            android:textColor="@android:color/black"
            android:alpha=".7"
            android:textSize="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_profile_number"
            android:layout_centerVertical="true"
            android:text="# / "
            android:textColor="@android:color/black"
            android:alpha=".3"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/tv_profile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="300"
            android:textColor="@android:color/black"
            android:alpha=".3"
            android:textSize="22dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_15_opacity"
        android:paddingEnd="15dp"
        android:paddingStart="18dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_profile_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="22dp"
            android:alpha=".6"/>

    </RelativeLayout>


</LinearLayout>
